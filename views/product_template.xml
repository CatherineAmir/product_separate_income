<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="product_template_form_inherit" model="ir.ui.view">
            <field name="name">product.template.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='detailed_type']" position="after">
                    <field name="occupancy" attrs="{'required':[('detailed_type','=','service')]}"/>
                    <field name="merge_product" widget="boolean_toggle"/>
                    <field name="boat_id"/>
                </xpath>

                <xpath expr="//field[@name='account_lines_ids']/tree//field[@name='label']" position="after">
                    <field name="is_sight_seeing" widget="boolean_toggle" />
                    <field name="is_egyptian" widget="boolean_toggle" attrs="{'invisible':[('is_sight_seeing','=',False)]}"/>
                     <field name="is_base" widget="boolean_toggle"/>
                </xpath>
                <xpath expr="//field[@name='account_lines_ids']/form//field[@name='label']" position="after">
                    <field name="is_sight_seeing" widget="boolean_toggle" />
                    <field name="is_egyptian" widget="boolean_toggle" attrs="{'invisible':[('is_sight_seeing','=',False)]}"/>
                    <field name="is_base" widget="boolean_toggle"/>
                </xpath>


            </field>


        </record>

            <record id="product_template_tree_inherit" model="ir.ui.view">
            <field name="name">product.template.tree</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="account.product_template_view_tree"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='list_price']" position="after">
                    <field name="boat_id"/>
                    <field name="location_id"/>
                </xpath>
            </field>
            </record>


         <record id="product_product_form_inherit" model="ir.ui.view">
            <field name="name">product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='detailed_type']" position="after">
                    <field name="occupancy" attrs="{'required':[('detailed_type','=','service')]}"/>
                    <field name="merge_product" widget="boolean_toggle"/>
                    <field name="boat_id"/>
                </xpath>



            </field>
        </record>

    </data>
</odoo>


