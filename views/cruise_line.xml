<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="cruise_line_form_view" model="ir.ui.view">
            <field name="name">cruise_line.form</field>
            <field name="model">cruise.line</field>
            <field name="arch" type="xml">
                <form string="ModelTitle">
                    <sheet>
                        <div class="oe_title">
                            <label for="cruise_id"/>
                            <h1>
                                <field name="cruise_id" placeholder="Title"/>
                            </h1>
                        </div>
                        <group>
                                            <group>
<!--                                                <field name="cruise_id" readonly="1"/>-->
                                                <field name="cruise_boat_id"/>
                                                <field name="partner_id"/>
                                                <field name="guest_name"/>
                                                <field name="guest_nationality" required="1"/>
                                                <field name="checkin"/>
                                                <field name="nights"/>
                                                <field name="cabinet_number"/>
                                                <field name="cabinet_type"/>
                                                <field name="occupancy"/>
                                                <field name="children" required="1"/>
                                                <field name="analytic_distribution" widget="analytic_distribution" readonly="0"/>
                                            </group>
                                            <group>



                                                <field name="sight_seeing" widget="boolean_toggle"/>
                                                <field name="sight_seeing_lang"
                                                       attrs="{'invisible':[('sight_seeing','=',False)]}"/>
                                                <field name="sight_seeing_price_person" attrs="{'invisible':[('sight_seeing','=',False)]}"/>
                                                <field name="currency_id"/>
                                                <field name="rate" widget="monetary"
                                                       options="{'currency_field': 'currency_id'}"/>
                                                <field name="payment_method"/>
                                                <field name="boarding_number"/>
                                                <field name="c_r_n"/>
                                                <field name="notes"/>
                                                <field name="is_paid_guide"/>
                                            </group>
                                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="cruise_line_tree_view" model="ir.ui.view">
            <field name="name">cruise_line.tree</field>
            <field name="model">cruise.line</field>
            <field name="arch" type="xml">
                 <tree string="Cruise Lines">
                                        <field name="cruise_id"/>
                                        <field name="cruise_boat_id"/>
                                         <field name="analytic_distribution"  widget="analytic_distribution"/>
                                        <field name="partner_id"/>
                                        <field name="guest_name"/>
                                        <field name="guest_nationality"/>
                                        <field name="checkin"/>
                                        <field name="nights"/>
                                        <field name="cabinet_number"/>
                                        <field name="currency_id"/>
                                        <field name="rate" widget="monetary"
                                               options="{'currency_field': 'currency_id'}"/>
                                        <field name="cabinet_type"/>
                                        <field name="occupancy"/>
                                        <field name="children" required="1"/>
                                        <field name="payment_method"/>
                                        <field name="sight_seeing" widget="boolean_toggle"/>
                                        <field name="sight_seeing_lang"
                                               attrs="{'invisible':[('sight_seeing','=',False)]}"/>
                                        <field name="sight_seeing_price_person" attrs="{'invisible':[('sight_seeing','=',False)]}"/>
                                        <field name="boarding_number"/>
                                        <field name="c_r_n"/>
                                        <field name="notes"/>
                                        <field name="is_paid_guide"/>

                                    </tree>
            </field>
        </record>

        <record id="cruise_line_search_view" model="ir.ui.view">
            <field name="name">cruise_line.search</field>
            <field name="model">cruise.line</field>
            <field name="arch" type="xml">
                <search string="Cruise Line">
                    <group expand="1" string="Group By">
                        <filter string="Cruise" name="cruise" domain="[]"
                                context="{'group_by':'cruise_id'}"/>
                    </group>
                    <field name="partner_id"/>
                    <field name="guest_name"/>
                </search>
            </field>
        </record>

        <record id="cruise_line_act_window" model="ir.actions.act_window">
            <field name="name">CruiseLine</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cruise.line</field>

            <field name="view_mode">tree,form</field>

        </record>

<!--        <menuitem name="ModelTitle" id="cruise_line_menu" parent="your_root_menu" action="cruise_line_act_window"/>-->

    </data>
</odoo>