        <!--                        <filter string="Example Field" name="example_field" domain="[]"-->
        <!--                                context="{'group_by':'example_field'}"/>-->
        <!--                    </group>-->
        <!--                </search>-->
        <!--            </field>-->
        <!--        </record>-->

        <record id="cruise_act_window" model="ir.actions.act_window">
            <field name="name">Cruise</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cruise.cruise</field>

            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Cruise" id="cruise_menu" parent="account.menu_finance_receivables" action="cruise_act_window"
                  sequence="112"/>

    </data>
</odoo>