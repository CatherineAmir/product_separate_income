<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="cruise_form_view" model="ir.ui.view">
            <field name="name">cruise.cruise.form</field>
            <field name="model">cruise.cruise</field>
            <field name="arch" type="xml">
                <form string="Cruise">


                        <header>
                            <field name="invoices_created" invisible="1"/>
                              <button name="create_invoices" string="Create Invoices" type="object" class="btn btn-primary"  attrs="{'invisible':[('state','=','draft')]}"/>
<!--                            '|',('invoices_created','=',True)-->
                            <button name="confirm" string="Confirm" type="object" class="btn btn-primary" states="draft"/>


                            <field name="state" widget="statusbar"/>

                        </header>
                     <sheet>
                    <div name="button_box" class="oe_button_box">
                    <field name="invoice_ids" invisible="1"/>
                    <field name="invoice_line_ids" invisible="1"/>
]
                    <button
                    type="object"
                    class="oe_stat_button"
                    icon="fa-pencil"
                    name="action_view_invoices_ids"
                    attrs="{'invisible': [('invoice_ids', '=', False)]}"
                >
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_value">
                            <field name="invoices_count" />
                        </span>
                        <span class="o_stat_text"> Invoices</span>
                    </div>
                </button>

                        <button
                    type="object"
                    class="oe_stat_button"
                    icon="fa-pencil"
                    name="action_view_journal_items"
                    attrs="{'invisible': [('invoice_line_ids', '=', False)]}"
                >
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_value">
                            <field name="invoice_line_counts" />
                        </span>
                        <span class="o_stat_text"> Journals</span>
                    </div>
                </button>
                    <button
                    type="object"
                    class="oe_stat_button"
                    icon="fa-pencil"
                    name="action_view_analytic_lines">


                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_value">

                        </span>
                        <span class="o_stat_text"> Analytic Accounts</span>
                    </div>
                </button>

                        <button
                    type="object"
                    class="oe_stat_button"
                    icon="fa-pencil"
                    name="action_view_payments">


                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_value">

                        </span>
                        <span class="o_stat_text"> Payments</span>
                    </div>
                </button>

                    </div>

                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Title"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="cruise_name"/>
                                <field name="create_date"/>
                                <field name="nights"/>
                                <field name="start_date" required="1"/>
                                <field name="company_id" required="1"/>
                                <field name="invoices_created" readonly="1"/>
                                 <field name="analytic_distribution"  widget="analytic_distribution"/>
                            </group>
                            <group>
                                <!--                                <field name="example_field"/>-->
                            </group>
                        </group>
                        <notebook>
                            <page name="cruise details" string="Details">


                                <field name="cruise_lines">
                                    <tree>
                                        <field name="cruise_id"/>
                                        <field name="cruise_name"/>
                                         <field name="analytic_distribution"  widget="analytic_distribution"/>
                                        <field name="partner_id"/>
                                        <field name="guest_name"/>
                                        <field name="guest_nationality"/>
                                        <field name="checkin"/>
                                        <field name="nights"/>
                                        <field name="cabinet_number"/>
                                        <field name="currency_id"/>
                                        <field name="rate" widget="monetary"
                                               options="{'currency_field': 'currency_id'}"/>
                                        <field name="cabinet_type"/>
                                        <field name="occupancy"/>
                                        <field name="children" required="1"/>
                                        <field name="payment_method"/>
                                        <field name="sight_seeing" widget="boolean_toggle"/>
                                        <field name="sight_seeing_lang"
                                               attrs="{'invisible':[('sight_seeing','=',False)]}"/>
                                        <field name="sight_seeing_price_person" attrs="{'invisible':[('sight_seeing','=',False)]}"/>
                                        <field name="boarding_number"/>
                                        <field name="c_r_n"/>
                                        <field name="notes"/>
                                        <field name="is_paid_guide"/>

                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="cruise_id" readonly="1"/>
                                                <field name="cruise_name"/>
                                                <field name="partner_id"/>
                                                <field name="guest_name"/>
                                                <field name="guest_nationality" required="1"/>
                                                <field name="checkin"/>
                                                <field name="nights"/>
                                                <field name="cabinet_number"/>
                                                <field name="cabinet_type"/>
                                                <field name="occupancy"/>
                                                <field name="children" required="1"/>
                                                <field name="analytic_distribution" widget="analytic_distribution" readonly="0"/>
                                            </group>
                                            <group>



                                                <field name="sight_seeing" widget="boolean_toggle"/>
                                                <field name="sight_seeing_lang"
                                                       attrs="{'invisible':[('sight_seeing','=',False)]}"/>
                                                <field name="sight_seeing_price_person" attrs="{'invisible':[('sight_seeing','=',False)]}"/>
                                                <field name="currency_id"/>
                                                <field name="rate" widget="monetary"
                                                       options="{'currency_field': 'currency_id'}"/>
                                                <field name="payment_method"/>
                                                <field name="boarding_number"/>
                                                <field name="c_r_n"/>
                                                <field name="notes"/>
                                                <field name="is_paid_guide"/>
                                            </group>
                                        </group>

                                    </form>
                                </field>


                            </page>

<!--                            <page name="invoice_ids" string="Invoices">-->
<!--                                <field name="invoice_ids" context="{'tree_view_ref':'account.view_out_invoice_tree'}" >-->

<!--                                </field>-->
<!--                            </page>-->
<!--                            <page name="invoice_line_ids" string="Invoice Lines">-->
<!--                                <field name="invoice_line_ids" context="{'default_group_by':'account_id'}"/>-->
<!--                            </page>-->

                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                    </div>


                </form>
            </field>
        </record>

        <record id="cruise_tree_view" model="ir.ui.view">
            <field name="name">cruise.cruise.tree</field>
            <field name="model">cruise.cruise</field>
            <field name="arch" type="xml">
                <tree string="Cruise Trip">
                    <field name="name"/>
                    <field name="cruise_name"/>
                    <field name="nights"/>
                    <field name="start_date"/>
                    <field name="company_id"/>
                    <field name="create_date"/>

                </tree>
            </field>
        </record>

        <!--        <record id="cruise_search_view" model="ir.ui.view">-->
        <!--            <field name="name">ProjectName.cruise.search</field>-->
        <!--            <field name="model">ProjectName.cruise</field>-->
        <!--            <field name="arch" type="xml">-->
        <!--                <search string="ModelTitle">-->
        <!--                    <group expand="1" string="Group By">-->
        <!--                        <filter string="Example Field" name="example_field" domain="[]"-->
        <!--                                context="{'group_by':'example_field'}"/>-->
        <!--                    </group>-->
        <!--                </search>-->
        <!--            </field>-->
        <!--        </record>-->

        <record id="cruise_act_window" model="ir.actions.act_window">
            <field name="name">Cruise</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cruise.cruise</field>

            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Cruise" id="cruise_menu" parent="account.menu_finance_receivables" action="cruise_act_window"
                  sequence="112"/>


         <record id="move_tree" model="ir.ui.view">
            <field name="name">account.move.tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="partner_id"/>
                    <field name="cruise_id"/>
                    <field name="cruise_name"/>

                </xpath>
            </field>
         </record>

    </data>
</odoo>