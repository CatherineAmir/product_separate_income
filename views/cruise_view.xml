<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="cruise_form_view" model="ir.ui.view">
            <field name="name">cruise.cruise.form</field>
            <field name="model">cruise.cruise</field>
            <field name="arch" type="xml">
                <form string="Cruise">


                        <header>
                              <button name="create_journal_entry" string="Create Invoices" type="object" class="btn btn-primary" states="confirmed"/>
                            <button name="confirm" string="Confirm" type="object" class="btn btn-primary" states="draft"/>


                            <field name="state" widget="statusbar"/>

                        </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Title"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="create_date"/>
                                <field name="nights"/>
                                <field name="start_date" required="1"/>
                                <field name="company_id" required="1"/>
                            </group>
                            <group>
                                <!--                                <field name="example_field"/>-->
                            </group>
                        </group>
                        <notebook>
                            <page name="cruise details" string="Details">


                                <field name="cruise_lines">
                                    <tree>
                                        <field name="cruise_id"/>
                                        <field name="partner_id"/>
                                        <field name="guest_name"/>
                                        <field name="guest_nationality"/>
                                        <field name="checkin"/>
                                        <field name="nights"/>
                                        <field name="cabinet_number"/>
                                        <field name="cabinet_type"/>
                                        <field name="occupancy"/>
                                        <field name="sight_seeing" widget="boolean_toggle"/>
                                        <field name="sight_seeing_lang"
                                               attrs="{'invisible':[('sight_seeing','=',False)]}"/>
                                        <field name="currency_id"/>
                                        <field name="rate" widget="monetary"
                                               options="{'currency_field': 'currency_id'}"/>
                                        <field name="boarding_number"/>
                                        <field name="c_r_n"/>
                                        <field name="notes"/>
                                        <field name="is_paid_guide"/>

                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="cruise_id" readonly="1"/>
                                                <field name="partner_id"/>
                                                <field name="guest_name"/>
                                                <field name="guest_nationality"/>
                                                <field name="checkin"/>
                                                <field name="nights"/>
                                                <field name="cabinet_number"/>
                                                <field name="cabinet_type"/>
                                                <field name="occupancy"/>
                                            </group>
                                            <group>



                                                <field name="sight_seeing" widget="boolean_toggle"/>
                                                <field name="sight_seeing_lang"
                                                       attrs="{'invisible':[('sight_seeing','=',False)]}"/>
                                                <field name="currency_id"/>
                                                <field name="rate" widget="monetary"
                                                       options="{'currency_field': 'currency_id'}"/>
                                                <field name="boarding_number"/>
                                                <field name="c_r_n"/>
                                                <field name="notes"/>
                                                <field name="is_paid_guide"/>
                                            </group>
                                        </group>

                                    </form>
                                </field>


                            </page>

                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                    </div>


                </form>
            </field>
        </record>

        <record id="cruise_tree_view" model="ir.ui.view">
            <field name="name">cruise.cruise.tree</field>
            <field name="model">cruise.cruise</field>
            <field name="arch" type="xml">
                <tree string="Cruise Trip">
                    <field name="name"/>
                    <field name="nights"/>
                    <field name="start_date"/>
                    <field name="company_id"/>
                    <field name="create_date"/>

                </tree>
            </field>
        </record>

        <!--        <record id="cruise_search_view" model="ir.ui.view">-->
        <!--            <field name="name">ProjectName.cruise.search</field>-->
        <!--            <field name="model">ProjectName.cruise</field>-->
