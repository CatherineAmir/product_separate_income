<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="payment_cruise_form_inherit" model="ir.ui.view">
            <field name="name">account.payments.cruise.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_method_line_id']" position="after">
                    <field name="cruise_ids" widget="many2many_tags"/>
                    <field name="cruise_boat_ids" widget="many2many_tags"/>
                    <field name="payment_state"/>
                </xpath>

            </field>
        </record>

        <record id="payment_cruise_tree_inherit" model="ir.ui.view">
            <field name="name">account.payments.cruise.tree</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_method_line_id']" position="after">
                    <field name="cruise_ids" widget="many2many_tags"/>
                    <field name="cruise_boat_ids" widget="many2many_tags"/>
                    <field name="payment_state"/>
                    <field name="reconciled_invoice_ids" widget="many2many_tags"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>